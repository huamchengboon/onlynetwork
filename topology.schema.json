{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Network Topology",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "host",
                            "switch",
                            "router",
                            "firewall",
                            "server"
                        ]
                    },
                    "label": {
                        "type": "string"
                    },
                    "position": {
                        "type": "object",
                        "properties": {
                            "x": {
                                "type": "number"
                            },
                            "y": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "x",
                            "y"
                        ]
                    },
                    "config": {
                        "type": "object"
                    }
                },
                "required": [
                    "id",
                    "type",
                    "label",
                    "position",
                    "config"
                ]
            }
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "endpoints": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "object",
                            "properties": {
                                "nodeId": {
                                    "type": "string"
                                },
                                "ifId": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "nodeId",
                                "ifId"
                            ]
                        }
                    },
                    "linkType": {
                        "type": "string",
                        "enum": [
                            "ethernet"
                        ]
                    },
                    "trunkVlans": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                },
                "required": [
                    "id",
                    "endpoints",
                    "linkType"
                ]
            }
        },
        "metadata": {
            "type": "object"
        }
    },
    "required": [
        "id",
        "name",
        "nodes",
        "links"
    ]
}